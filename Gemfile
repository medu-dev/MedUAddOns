source 'https://rubygems.org'

gem 'rails', '3.2.3'

gem 'pg'


# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'

  gem 'uglifier', '>= 1.0.3'
end

gem 'jquery-rails'

group :test do
  gem 'minitest'
  gem 'minitest-reporters', '>= 0.5.0'
  gem 'mocha', :require => false
end

gem 'httparty'

gem 'thin'

